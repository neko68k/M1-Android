<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.neko68k.M1" android:versionName="3.51" android:versionCode="20150330">
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="21"/>   
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    

    <application android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:allowBackup="true">
        <activity android:name="com.neko68k.M1.FragmentControl"
                  android:label="@string/app_name"

                  android:launchMode="singleTop"
                  >
            <intent-filter>
                <action android:name="com.neko68k.M1.action.TOGGLE_PLAYBACK" />
                <action android:name="com.neko68k.M1.action.PLAY" />
                <action android:name="com.neko68k.M1.action.PAUSE" />
                <action android:name="com.neko68k.M1.action.SKIP" />
                <action android:name="com.neko68k.M1.action.REWIND" />
                <action android:name="com.neko68k.M1.action.STOP" />
                <action android:name="com.neko68k.M1.action.LOAD" />
                <action android:name="com.neko68k.M1.action.JUMP" />
                <action android:name="com.neko68k.M1.action.TOGGLE_LOAD_COMPLETE" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />                
            </intent-filter>
        </activity>
        <activity android:name="com.neko68k.M1.Prefs" />
        <activity android:name=".GameListActivity" />

		<service android:name="com.neko68k.M1.PlayerService" />
		
		<receiver android:name=".MusicIntentReceiver">
            <intent-filter>
                <action android:name="android.media.AUDIO_BECOMING_NOISY" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
    </application>
</manifest>